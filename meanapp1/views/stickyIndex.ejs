                                    <%toppingCheck("steakStrips")%>>
                                    <label for="steakStrips">Steak Strips</label>
                                </li>
                            </ul>
                        </div>
                
            
            </fieldset>
            <% if(errors.length > 0){%>
                <ul>
                <%for(let i = 0; i < errors.length; i++){ %>
                    <li><%=errors[i]%></li>
                <%}%>
            <%}%>
            <input type="submit" value="Go to checkout">
        </fieldset>
        </form>
    </body>
</html>